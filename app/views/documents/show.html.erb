<div class="file-header">
  <h2><%= @document.name %></h2>
  <ul class="operations">
    <li><%= link_to 'Modifier le document', dpath('project.document', :id => @document.id, :action => 'edit') %></li>
    <li><%= link_to 'Détruire le document', dpath('project.document', :id => @document.id), :method => :delete, :confirm => 'Êtes-vous sur de vouloir détruire ce document ?' %></li>
  </ul>
</div>

<% if not @document.description.empty? %>
  <div class="block">
    <%= htmlize(@document.description) %>
  </div>
<% end %>

<% if not @document.url.empty? %>
  <div class="block">
    <%= link_to 'Télécharger le fichier', @document.url %>
  </div>
<% end %>
