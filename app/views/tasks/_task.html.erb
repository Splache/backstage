<div class="task">
  <div class="details">
    <h3><span class="identifier"><%= task.identifier %></span> <%= link_to task.name, edit_task_path(task) %></h3>
    <div class="wrapper-description"><div class="description"><%= htmlize(task.description) %></div></div>
    <%= task_line_detail('user', 'Créé par', link_to(task.creator.name, user_path(task.creator))) %>
    <%= task_line_detail('user', 'Assigné à', (task.worker ? link_to(task.worker.name, user_path(task.worker)) : '<span class="unassigned">Non assigné</span>')) %>
    <%= task_line_detail('comments', 'Voir les', link_to("Commentaires (#{task.comments.length})", '#', :class => 'open-comments'), :class => 'comments') %>    
  </div>
  
  <div class="overview">
    <% if @filters[:archive] %>
      
    <% else %>
      <%= show_start_date(task) %>
      
      <% if task.hours_estimated.to_i > 0 %>
        <div class="line"><%= icon('time') %><div class="content"><label>Temps estimé :</label><%= task.hours_estimated %> heures</div></div>
      <% end %>
      <%= show_task_due_on(task) %>
    <% end %>
  </div>
  <div class="operations">
    <%= link_to 'X', task_path(task), :method => :delete, :confirm => 'Êtes-vous sûr de vouloir détruire cette tâche ?', :class => 'delete' %>
  </div>
  
  <div class="wrapper-comments">
    <div class="box">
      <div class="heading">
        <%= link_to 'X', '#', :class => 'close-comments' %>
        <h3><span class="identifier"><%= task.identifier %></span>: <%= task.name %></h3>
      </div>
      <ul class="comments">
        <% task.comments.each do |comment| %>
          <%= render "#{comments_path}/comment", :comment => comment %>
        <% end %>
      </ul>
      <div class="float-anchor"></div>
    </div>
  </div>
</div>