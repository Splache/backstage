<!DOCTYPE HTML>
<html>
<head>
  <title>Backstage</title>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
  
  <%= stylesheet_link_tag "base.css" %>
  <%= stylesheet_link_tag "form.css" %>
  <%= stylesheet_link_tag "layout.css" %>
  <%= stylesheet_link_tag "code_files.css" %>
  <%= stylesheet_link_tag "tasks.css" %>
  <%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js" %>
  <%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.1/jquery-ui.min.js" %>
  <script type="text/javascript">var $j = jQuery.noConflict();</script>
  <%= javascript_include_tag "backstage/base" %>
  <%= javascript_include_tag "backstage/tasks" %>
  <%= javascript_include_tag "backstage/form/custom_combo.js" %>
  
</head>

<body>
  <div class="main-wrapper">
    <div class="main-header">
      <div class="top-bar">
        <ul class="projects">
          <% Project.all.each do |p| %>
            <li><%= link_to p.name, project_path(p) %></li>
          <% end %>
        </ul>
        
        <% if current_user %>
          <ul class="users">
            <li><%= link_to 'Éditer mon profil', edit_user_path(current_user) %></li>
            <li><%= link_to 'Ajouter un usager', new_user_path %></li>
            <li><%= link_to 'Déconnexion', session_path(1), :method => :delete, :class => 'disconnect' %></li>
          </ul>
        <% end %>
      </div>
      <div class="shadow"></div>
      <div class="logo"><img src="../images/logo.png" alt="Backstage" /></div>
      <h1><%= current_project.name %></h1>
      <div class="operation">
        <%= link_icon_to('Ajouter un fichier', new_code_file_path, :icon => 'add') if in_section?('code') %>
        <%= link_icon_to('Ajouter un document', new_document_path, :icon => 'add') if in_section?('documents') %>
        <%= link_icon_to('Ajouter une tâche', new_task_path, :icon => 'add') if in_section?('tasks') %>
      </div>
    </div>
    <div class="main-content">
      <div class="navigations">
        <ul class="choices">
          <li class="first <%= in_section?('tasks') ? 'selected' : '' %>"><%= link_icon_to 'Tâches', tasks_path, :icon => 'tasks' %></li>
          <li class="<%= in_section?('code') ? 'selected' : '' %>"><%= link_icon_to 'Code', code_files_path, :icon => 'help' %></li>
          <li class="<%= in_section?('documents') ? 'selected' : '' %>"><%= link_icon_to 'Documents', documents_path, :icon => 'help' %></li>
        </ul>
        <%= show_menu_code(@code_file) if in_section?('code') %>
        <%= show_menu_documents(@document) if in_section?('documents') %>
        <%= render "#{tasks_path}/filters" if in_section?('tasks') %>
      </div>
      
      <div class="inner-space">
        <%= yield %>
      </div>
      
      <div style="clear:both"></div>
    </div>
  </div>
</body>
</html>